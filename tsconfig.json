{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "lib": [
      "dom",
      "es2018"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "outDir": "./dist",
    "paths": {
      "*": [
        "src/types/*"
      ]
    },
    "removeComments": false,
    "sourceMap": false,
    "target": "ES6",
    "esModuleInterop": true,
    "pretty": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.*"
  ]
}